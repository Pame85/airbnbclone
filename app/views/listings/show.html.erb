<h2>Reviews</h2>

    <% @reviews.each do |review| %>
       <h3>Rating: <%= review.rating %></h3>
       <p><%= review.comment %></p>
     <% end %>

     <h2>Average Rating: <%= @listing.average_rating %></h2>
     
     <h2>Add a Review</h2>
     <%= form_for [@listing, @listing.reviews.build] do |f| %>
       <div>
         <%= f.label :rating %>
         <%= f.number_field :rating, in: 1..5 %>
       </div>
       <div>
         <%= f.label :comment %>
         <%= f.text_area :comment %>
       </div>
       <div>
         <%= f.submit 'Create Review' %>
       </div>
     <% end %>