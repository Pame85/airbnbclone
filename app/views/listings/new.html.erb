<h1>Add New listing</h1>

<%= form_for @listing do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.submit 'Create Listing' %>
<% end %>
<hr>
<%= link_to "View All Listings", listings_path %>
<br> 
<%= link_to 'Go back to Home', root_path %>